<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<!-- VBox: Centers login form vertically and horizontally -->
<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ums.controller.LoginController">

    <!-- Title Label -->
    <Label text="University Management System" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Form Container (Restricts Max Width) -->
    <VBox spacing="10" alignment="CENTER" maxWidth="300">

        <!-- Username Field -->
        <TextField fx:id="txtUsername" promptText="Enter Username"
                   prefWidth="250" maxWidth="300" style="-fx-padding: 10;" />

        <!-- Password Field (Hidden Input) -->
        <PasswordField fx:id="txtPassword" promptText="Enter Password"
                       prefWidth="250" maxWidth="300" style="-fx-padding: 10;" />

        <!-- Login Button -->
        <Button text="Login" fx:id="btnLogin"
                prefWidth="250" maxWidth="300" style="-fx-background-color: #0078D7; -fx-text-fill: white;" />
    </VBox>

</VBox>
