<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ums.controller.CourseController">
    <children>
        <!-- TableView to display courses -->
        <TableView fx:id="courseTable" prefHeight="300.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="courseNameColumn" text="Course Name"/>
                <TableColumn fx:id="courseCodeColumn" text="Course Code"/>
                <TableColumn fx:id="subjectNameColumn" text="Subject"/>
                <TableColumn fx:id="sectionNumberColumn" text="Section"/>
                <TableColumn fx:id="teacherNameColumn" text="Teacher"/>
                <TableColumn fx:id="lectureTimeColumn" text="Lecture Time"/>
                <TableColumn fx:id="locationColumn" text="Location"/>
            </columns>
        </TableView>

        <!-- Input Fields for Manual Entry -->
        <HBox layoutY="320.0" spacing="10">
            <children>
                <TextField fx:id="txtCourseName" promptText="Course Name"/>
                <TextField fx:id="txtCourseCode" promptText="Course Code"/>
                <TextField fx:id="txtSubjectName" promptText="Subject"/>
                <TextField fx:id="txtSectionNumber" promptText="Section"/>
                <TextField fx:id="txtTeacherName" promptText="Teacher"/>
                <TextField fx:id="txtLectureTime" promptText="Lecture Time"/>
                <TextField fx:id="txtLocation" promptText="Location"/>
            </children>
        </HBox>

        <!-- Buttons for Actions -->
        <HBox layoutY="360.0" spacing="10">
            <children>
                <Button fx:id="btnAddCourse" text="Add Course" onAction="#handleAddCourse"/>
                <Button fx:id="btnEditCourse" text="Edit Course" onAction="#handleEditCourse"/>
                <Button fx:id="btnDeleteCourse" text="Delete Course" onAction="#handleDeleteCourse"/>
                <Button fx:id="btnImportExcel" text="Import from Excel" onAction="#handleImportExcel"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
