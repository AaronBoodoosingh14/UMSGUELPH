<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ums.controller.EditSubject">

    <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Edit Subject" />

        <TextField fx:id="txtSubjectCode" maxWidth="300" promptText="Subject Code" />
        <TextField fx:id="txtSubjectName" maxWidth="300" promptText="Subject Name" />

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnSave" text="Save" />
            <Button fx:id="btnCancel" text="Cancel" />
        </HBox>

    </VBox>
</AnchorPane>
