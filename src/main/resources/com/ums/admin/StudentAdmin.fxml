<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.ums.controller.StudentController">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Student Management" />

    <TableView fx:id="studentTable" prefWidth="450">
        <columns>
            <TableColumn fx:id="colStudentID" text="Student ID" />
            <TableColumn fx:id="colName" text="Name" />
            <TableColumn fx:id="colEmail" text="Email" />
            <TableColumn fx:id="colAcademicLevel" text="Academic Level" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <TextField fx:id="txtStudentID" promptText="Student ID" />
        <TextField fx:id="txtName" promptText="Full Name" />
        <TextField fx:id="txtEmail" promptText="Email" />
        <TextField fx:id="txtAcademicLevel" promptText="Academic Level" />
    </HBox>

    <HBox spacing="10">
        <Button fx:id="btnAdd" text="Add Student" />
        <Button fx:id="btnEdit" text="Edit Student" />
        <Button fx:id="btnDelete" text="Delete Student" />
    </HBox>

</VBox>
